html(xmlns='http://www.w3.org/1999/xhtml')
  head
    meta(http-equiv='', content='text/html; charset=utf-8')
    title Новый вопрос на Сарафане
  body(yahoo='', bgcolor='#fff' 
    style='margin: 0; margin-bottom: 20px; min-width: 100%!important; font-weight: 400; background: #fafafa; padding: 3%; font-size: 15px; color: #313436')
    a(href="http://sarafan.online" style="margin-bottom: 30px; display: block; cursor: pointer" target="_blank")
      img(src="http://sarafan.online/images/logo.png")
    table(align='center', cellpadding='0', cellspacing='0', border='0', bgcolor='#fff', 
      style='width: 100%; max-width: 800px; padding: 3%; line-height: 1.5')
      tr
        td
          div(style="margin-top: 20px") 
            span(style="font-weight: 700") Имя:
            span &nbsp;#{params.name} 
          div 
            span(style="font-weight: 700") Телефон:
            span &nbsp; #{params.phone} 
          div
            span(style="font-weight: 700") Емейл:
            span &nbsp;  #{params.email} 
          div 
            span(style="font-weight: 700") Сообщение:
            span &nbsp; #{params.message} 
      
